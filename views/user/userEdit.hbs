									<form action="/saveChanges" method="post" onsubmit="return check()">
                                        <span id="name" style="color:#FCB941 ;"></span>
										<input type="text" value="{{this.name}}" class="form-control form-control-rounded" id="Name" onkeyup="validateName()" placeholder="Username" name="name" >
                                        



                                         <span id="email" style="color:#FCB941 ;"></span>
                                        <input type="email" value="{{this.email}}" class="form-control form-control-rounded" id="Email" onkeyup="validEmail()" placeholder="Email" name="email">
                                        


                                        
                                        <span id="phonenumbers" style="color:#FCB941 ;"></span>
                                        <input type="text" value="{{this.number}}" class="form-control form-control-rounded" id="phonenumber" onkeyup="validPhoneumber()" placeholder="Phone Number" name="number">
                                        


