

<body>
    <div class="page-wrapper">
        

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">My Orders</h1>
					
					{{#if OgrandTot}}
					<div class="mt-3">   
					
					<h4>TotalPurcahse:{{OgrandTot}}</h4>
					
					</div>
					{{/if}}
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="container-fluid">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								
								<th> </th>
								<th>ProductName</th>
								<th>Brand</th>
								<th>Price</th>
								<th>Qty</th>
								<th>Total</th>
								<th>Discount</th>
								<th>Total Aftr Dis</th>
								<th>PaymentType</th>
								<th>status</th>
							</tr>
						</thead>

						<tbody>
							{{#each orderDetails}}
							<tr>
								<td class="product-col ">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="/images/product/{{this.productdetails.img.[0]}}" style="width: 45px;height: 45px;" alt="Product image">
											</a>
										</figure>

										<h3 class="product-title">
											<a href="#"></a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col ">{{this.productdetails.productname}}</td>
								<td class="price-col">{{this.catdetails.[0].Brand}}</td>
								<td class="price-col">{{this.productdetails.price}}</td>
								<td class="stock-col"><span class="in-stock">{{this.product.quantity}}</span></td>
								<td class="price-col">{{this.total}}</td>

                                {{#if this.DiscountedPrice}}
								<td class="price-col">{{this.DiscountPercentage}}%</td>
								<td class="price-col">{{this.DiscountedPrice}}</td>
                                {{else}}
								<td class="price-col">No Discount</td>
								<td class="price-col">{{this.total}}</td>
                               {{/if}}
								<td class="price-col">{{this.CustomerPaymentMethod}}</td>
								<td class="price-col">{{this.product.shipping}}</td>
								

								{{#unless cancelled}}
										{{#if Delivered}}
												<td class="remove-col"><a href="/returnProduct/?odrId={{this._id}}&prId={{this.product.item}}"><button class="btn btn-outline-primary" >Return</button></a></td>
										{{else}}
												{{#if Return}}
												{{else}}
												<td class="remove-col"><button class="btn btn-outline-primary" onclick="ShippingUser('{{this._id}}','{{this.product.item}}','Cancelled','{{this.product.quantity}}')" >Cancel</button></td>
												{{/if}}
										{{/if}}
								{{/unless}}

								

								

								
							</tr>
							{{/each}}

						</tbody>
					</table><!-- End .table table-wishlist -->

            	</div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

 <script src="/javascripts/ajaxCountCall.js"></script>

</body>


